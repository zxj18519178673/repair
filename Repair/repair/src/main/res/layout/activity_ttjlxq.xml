<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">
    <com.jb.repair.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        f1:title="投退记录详情"
        f1:leftImage="@string/icon_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginRight="@dimen/x80">
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="退出时间"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_begin_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="投入时间"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_function_range"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="退出功能范围"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_function_descri"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="退出功能简述"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_be_report"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:isdoc="true"
            f1:text1="投退报告"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_boolean"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="是否故障退出"
            f1:text2="是"/>
</LinearLayout>
</LinearLayout>
