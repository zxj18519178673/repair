<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    >
    <com.jb.repair.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        f1:title="备品备件详情"
        f1:leftImage="@string/icon_arrow" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginRight="@dimen/x80">

        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="备品备件名称"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="物资编号"
            f1:text2="UVY22078"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="规格型号"
            f1:text2="UVYD22078"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_factory"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="生产厂家"
            f1:text2="ABC"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="单价"
            f1:text2="1"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_ration"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="定额"
            f1:text2="1"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_stock"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="库存数量"
            f1:text2="1"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="生产日期"
            f1:text2="2014.10.11"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_main_param"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"

            f1:text1="主要参数"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="存放位置"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="备注"
            f1:text2="1号轴承"/>

    </LinearLayout>

</LinearLayout>
