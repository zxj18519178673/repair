<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f1="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.jb.repair.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        f1:title="设备资料详情"
        f1:leftImage="@string/icon_arrow" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginRight="@dimen/x80">
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="资料类型"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="文件名称"
            f1:text2="UVYD22078"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="文件类型"
            f1:text2="ABC"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="版本"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_upload"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="上传人"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_upload_data"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="上传时间"
            f1:text2="2014.11.11"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="备注"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_attachment"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:isdoc="true"
            f1:text1="附件"
            f1:text2="1号轴承"/>


    </LinearLayout>


</LinearLayout>
