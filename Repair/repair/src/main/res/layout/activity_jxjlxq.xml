<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">
    <com.jb.repair.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        f1:title="检修记录详情"
        f1:leftImage="@string/icon_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginRight="@dimen/x80">
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_check_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="检修时间"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_check_type"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="检修类型"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_check_grade"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="检修等级"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_people"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="负责人"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_check_descri"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:text1="检修情况简述"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_instuctor"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:isdoc="true"
            f1:text1="作业指导书"
            f1:text2="1号轴承"/>
        <com.jb.repair.view.InfoTextView
            android:id="@+id/tv_check_info"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            f1:isdoc="true"
            f1:text1="检修资料"
            f1:text2="1号轴承"/>
</LinearLayout>
</LinearLayout>
