<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    >
    <com.jb.repair.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        f1:leftImage="@drawable/ico_left"
        f1:rightText="确认"
        />
    <LinearLayout
        android:layout_width="@dimen/x500"
        android:layout_marginLeft="@dimen/x150"
        android:layout_marginTop="@dimen/y250"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/tab_item_gray"
            android:text="服务地址"
            android:gravity="center"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/login_setting_tip"
            android:padding="@dimen/y8"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white_bg"
            android:layout_height="@dimen/y100">
            <TextView
                android:layout_width="wrap_content"
                android:text="服务地址："
                android:layout_centerVertical="true"
                android:id="@+id/tv_fuwu"
                android:textSize="@dimen/login_setting_text"
                android:layout_marginLeft="@dimen/x10"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/login_setting_text"
                    android:id="@+id/ed_test"
                    android:background="@drawable/textview_unselet"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/tv_test"
                    android:layout_toRightOf="@+id/tv_fuwu"
                    android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="测试"
                android:id="@+id/tv_test"
                android:textSize="@dimen/login_setting_text"
                android:textColor="@color/white_font"
                android:layout_alignParentRight="true"
                android:background="@drawable/textview_selected"
                android:layout_marginRight="@dimen/x10"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y33"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:background="@drawable/textview_selected"
                    android:padding="@dimen/login__setting_padding"
                    android:layout_centerHorizontal="true"
                    android:text="下载数据库"
                    android:id="@+id/tv_download"
                    android:textSize="@dimen/login_setting_text"
                    android:textColor="@color/white_font"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/textview_selected"
                android:textColor="@color/white_font"
                android:text="同步数据库"
                android:padding="@dimen/login__setting_padding"
                android:id="@+id/tv_sync"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/login_setting_text"
                android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x22"
            android:text="当前数据库版本更新时间:"
            android:id="@+id/tv_updata_time"
            android:textSize="@dimen/x22"
            android:layout_marginTop="@dimen/y33"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
