<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/gray_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white_font"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginTop="@dimen/y15"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white_font"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginLeft="@dimen/x15"
                android:id="@+id/tv_title"
                android:gravity="center_vertical"
                android:textSize="@dimen/x30"
                android:text="王小明，今日点检任务如下："/>

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:background="@drawable/dotted_line" />
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_now"
            android:background="@color/white_font"
            android:layout_height="wrap_content"></ListView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginTop="@dimen/x15"
            android:background="@color/title_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/x280"
                android:layout_height="@dimen/y80"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/textview_selected"
                android:id="@+id/tv_bef_check"
                android:textSize="@dimen/x28"
                android:gravity="center"
                android:text="我的历史点检任务"/>
            <TextView
                android:layout_width="@dimen/x250"
                android:layout_height="@dimen/y80"
                android:gravity="center"
                android:background="@drawable/textview_unselet"
                android:id="@+id/tv_change"
                android:textSize="@dimen/x28"
                android:text="异常记录"/>
            <TextView
                android:layout_width="@dimen/x250"
                android:layout_height="@dimen/y80"
                android:gravity="center"
                android:textSize="@dimen/x28"
                android:background="@drawable/textview_unselet"
                android:id="@+id/tv_bug"
                android:text="缺陷记录"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_before"
            android:background="@color/white_font"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
</LinearLayout>
